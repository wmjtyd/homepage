---
export interface Props {
    title: string;
    englishTitle: string;
}

const { title, englishTitle } = Astro.props;
---

<div class="SectionTitle">
    <h2 class="SectionTitle-title">
        <div class="SectionTitle-titleChinese">
            {title}
        </div>
        <div class="SectionTitle-titleEnglish">{englishTitle}</div>
    </h2>
    <div class="SectionTitle-desc">
        <slot />
    </div>
</div>

<style lang="scss">
h2 {
    margin-block: 0;
}

.SectionTitle {
    text-align: center;
    line-height: 1.5;

    margin: 4rem auto;

    &-title {
        display: flex;
        flex-direction: column-reverse;

        &Chinese {
            font-size: 2.5em;
            font-weight: bold;
            text-shadow: 0px 4px 12px rgba(255, 255, 255, 0.25);
        }

        &English {
            font-size: 0.6em;
            text-transform: uppercase;
            font-weight: normal;
            letter-spacing: 0.4em;
        }
    }
}
</style>
